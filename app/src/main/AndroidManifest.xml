<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.github.quadflask.fleamarketseller"
          xmlns:android="http://schemas.android.com/apk/res/android">

	<application
		android:name=".FleamarketApplication"
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<activity
			android:name=".view.MainActivity"
			android:label="@string/app_name"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name=".view.InputCategoryActivity"
			android:label="@string/act_title_input_category"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="adjustResize"/>
		<activity
			android:name=".view.InputProductActivity"
			android:label="@string/act_title_input_product"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="adjustResize"/>
		<activity
			android:name=".view.InputTransactionActivity"
			android:label="@string/act_title_input_transaction"
			android:theme="@style/AppTheme.NoActionBar"
			android:windowSoftInputMode="adjustResize"/>
		<activity
			android:name=".view.ProductListActivity"
			android:label="@string/act_title_product_list"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".view.CategoryListActivity"
			android:label="@string/act_title_category_list"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".view.MarketListActivity"
			android:label="@string/act_title_market_list"
			android:theme="@style/AppTheme.NoActionBar"/>
		<activity
			android:name=".view.VendorListActivity"
			android:label="@string/act_title_vendor_list"
			android:theme="@style/AppTheme.NoActionBar"/>
	</application>

</manifest>