<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical">

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="query term"/>

	<Button
		android:id="@+id/btn_open_date_range_selector"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="2016.05.01 ~ 05.24"/>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="term size"/>

	<!--date / month / quoter / year / total-->
	<Spinner
		android:id="@+id/sp_term_type"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</Spinner>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="vendor"/>

	<!--vendor list-->
	<Spinner
		android:id="@+id/sp_vendor"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</Spinner>

	<TextView
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="product"/>

	<!--product list-->
	<Spinner
		android:id="@+id/sp_product"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content">
	</Spinner>

</LinearLayout>